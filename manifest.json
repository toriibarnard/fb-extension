{
  "manifest_version": 3,
  "name": "NS Marketplace Vehicle Capture",
  "version": "1.0",
  "description": "Capture Facebook Marketplace vehicle listings data for tax assessment purposes",
  "permissions": ["activeTab", "storage", "downloads", "scripting"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/marketplace/item/*"],
      "js": ["scripts/content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["lib/*"],
      "matches": ["*://*.facebook.com/*"]
    }
  ]
}